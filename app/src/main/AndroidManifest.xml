<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alimentarte">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alimenticio">
        <activity
            android:name=".vista.Productos"
            android:exported="false" />
        <activity
            android:name=".vista.Register_ok"
            android:exported="false" />
        <activity
            android:name=".vista.Splash"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Alimenticio.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vista.Login"
            android:exported="false" />
        <activity
            android:name=".vista.Register"
            android:exported="false"
            android:theme="@style/Theme.Alimenticio.NoActionBar" />
    </application>

</manifest>